
.voting
  position: absolute;
  background: #151515 url("../images/bkg.png") 0 0;
  border-radius: 21px;
  width: 40px;
  height: 40px;
  left: -20px;
  top: -20px;
  .vote
    position: absolute;
    height: 100%;
    width: 100%;
    text-align: center;
    top: 0;
    line-height: 40px
  [data-arrow="down"]
    -moz-border-radius: 0 0 30px 30px;
    -webkit-border-radius: 0 0 30px 30px;
    width: 30px;
    height: 15px;
    border-bottom-left-radius: 30px;
    border-bottom-right-radius: 30px;
    border: 5px solid transparent;
    border-top: 0;
    cursor pointer
    position relative
    z-index 2
    &:hover
      border: 5px solid red;
      border-top: 0;

  [data-arrow="up"]
    -moz-border-radius: 30px 30px 0 0;
    -webkit-border-radius: 30px 30px 0 0;
    width: 30px;
    height: 15px;
    border-top-left-radius: 30px;
    border-top-right-radius: 30px;
    border: 5px solid transparent;
    border-top: 0;
    cursor pointer
    position relative
    z-index 2
    &:hover
      border: 5px solid green;
      border-bottom: 0;



body
  text-align: center;
  margin: 0;
  padding: 0;
  background: #151515 url("../images/bkg.png") 0 0;
  color: #eaeaea;
  font: 16px;
  line-height: 1.5;
  font-family: Monaco, "Bitstream Vera Sans Mono", "Lucida Console", Terminal, monospace;
  .container
    .questions-container
      max-width: 1000px;
      margin 0 auto
    .questions
      margin: 0 auto;
    .question
      box-sizing: border-box;
      text-align left
      display inline-block
      padding: 20px;
      border: 1px white dashed;
      margin: 20px;
      word-wrap: break-word;
      width 300px
      &[data-vote="up"] [data-arrow="up"]
        border: 5px solid green;
        border-bottom: 0;
      &[data-vote="down"] [data-arrow="down"]
        border: 5px solid red;
        border-top: 0;
      .text-area-container
        position: relative;
        width: 200px
        textarea, .resizer
          min-height: 25px;
          font-family: sans-serif;
          font-size: 14px;
          box-sizing: border-box;
          padding: 4px;
          border: 1px solid;
          overflow: hidden;
          width: 100%;
          line-height normal
          margin-bottom 2px

        textarea
          color white
          height: 100%;
          position: absolute;
          resize:none;
          white-space: normal;
          background: rgba(white, .2)

        .resizer
          visibility: hidden;
          white-space: pre-wrap;
          word-wrap: break-word;
          overflow-wrap: break-word;
        .characters
          position: absolute;
          text-align: right;
          font-size: 13px;
          color: gray;
          right: 4px;
          bottom: 1px;
      input[type=submit]
        margin-top 5px
        background rgba(gray,.5)
      .question-header, .text-area-container .question-header
        color #00FF00
        margin-bottom 10px
